<!-- Home.ejs -->
<!DOCTYPE html>
<html>

<head>
    <title>View Orders</title>
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
    <style>
        body {
            overflow-y: auto;
        }
        table,
        td,
        th {
            border: 1px solid;
            padding: 5px;
        }

        table {
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="overflow-hidden h-screen p-8 bg-slate-200">
        <header class="absolute inset-x-0
        						top-0 z-50">
            <nav class="flex items-center p-6 lg:px-8"
                 aria-label="Global">
                <div class="flex lg:flex-1 text-blue-800 text-2xl">
                    <a className=" border-collapse text-blue-800 text-lg"
                       href="/">
                        Americo Manufacturing Corporation
                    </a>
                </div>
            </nav>
        </header>

        <% if (name) { %>
        <div class="pt-10">
            <h1 class="text-sm font-bold tracking-tight
                       text-gray-900 sm:text-xl">
                Welcome <%= name %>
            </h1>
            <p class="mt-1 text-lg leading-8 text-gray-600">
                Orders
            </p>
            <% if(orders) { %>
                
                <p class="mt-1 text-lg leading-8 text-gray-600">
                  Awaiting Decision
                </p>
                <form method="post" action="/api/approveOrder">
                <div class="mt-1 text-sm text-black">
                    <table>
                        <tr>
                            <th>Date</th>
                            <th>Submitted By</th>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Status</th>

                        </tr>
                        
                        <% orders.forEach(order => { %>
                          <% if (order.approved === null){ %>
                            <tr>
                                <td><%= order.date%></td>
                                <td><%= order.username%></td>
                                <td><%= order.itemName %></td>
                                <td><%= order.quantity%></td>
                                <td>
                                    <select name="approvals" id="approvals">
                                        <option value="<%= [order.id,null] %>">  </option>
                                        <option value="<%= [order.id,true] %>">Approve</option>
                                        <option value="<%= [order.id,false] %>">Deny</option>
                                    </select>
                                </td>

                            </tr>
                          <% } %>

                        <% }) %>
                    </table>
                </div>
                <button class="w-full
                                   bg-indigo-500
                                   text-white
                                   text-sm font-bold
                                   py-2 px-4
                                   rounded-md hover:bg-indigo-600
                                   transition duration-300"
                                   type="submit"
                                   onClick={submit}>
                        Update Orders
                </button>
            </form>
                <p class="mt-1 text-lg leading-8 text-gray-600">
                    Approved Orders
                </p>
                <div class="mt-1 text-sm text-black">
                    <table>
                        <tr>
                            <th>Date</th>
                            <th>Submitted By</th>
                            <th>Item</th>
                            <th>Quantity</th>
                        </tr>
                        <% orders.forEach(order => { %>
                          <% if (order.approved){ %>
                            <tr>
                                <td><%= order.itemName %></td>
                                <td><%= order.username%></td>
                                <td><%= order.date%></td>
                                <td><%= order.quantity%></td>
                            </tr>
                          <% } %>

                        <% }) %>
                    </table>
                </div>

                <p class="mt-1 text-lg leading-8 text-gray-600">
                  Denied Orders
                </p>
                <div class="mt-1 text-sm text-black">
                    <table>
                        <tr>
                            <th>Date</th>
                            <th>Submitted By</th>
                            <th>Item</th>
                            <th>Quantity</th>

                        </tr>
                        <% orders.forEach(order => { %>
                          <% if (order.approved === false){ %>
                            <tr> 
                                <td><%= order.date%></td>
                                <td><%= order.username%></td>
                                <td><%= order.itemName %> </td>
                                <td><%= order.quantity%></td>
                            </tr>
                          <% } %>

                        <% }) %>
                    </table>
                </div>
            <% } %>

            <div class="mt-10 flex gap-x-6">
                <a href="/api/logout"
                   class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm
                          font-semibold text-white shadow-sm hover:bg-indigo-500
                          focus-visible:outline focus-visible:outline-2
                          focus-visible:outline-offset-2
                          focus-visible:outline-indigo-600">
                    Logout
                </a>
            </div>

            <% } else { %>
            <div class="pt-4 mt-2">
                <h1 class="text-sm font-bold tracking-tight
                       text-gray-900 sm:text-xl">
                    Invalid User
                </h1>
                <p class="mt-6 text-lg leading-8 text-gray-600">
                    Identity Unverified
                </p>
                <div class="mt-10 flex gap-x-6">
                    <a href="/login"
                       class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm
                              font-semibold text-white shadow-sm
                              hover:bg-indigo-500 focus-visible:outline
                              focus-visible:outline-2 focus-visible:outline-offset-2
                              focus-visible:outline-indigo-600">
                        Login/Register
                    </a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</body>

</html>
